{{!
    @template mod_zatuk/video_card
    Example context (json):
    {
       "delete_enable" :"true",
       "id" :"12",
       "thumbnail" :"",
       "title" :"Zatuk",
       "videoid" :"videoid",
       "path" :"/path",
       "usercreated" :"admin"

    }
}}
<div class="w-100 pull-left">
    <div class="card-body">
    	{{# delete_enable}}
    		<span class="pull-right deleteuploadedvideo" data-id={{id}}>
    			<i class="fa fa-trash" aria-hidden="true"></i>
    		</span>
    	{{/ delete_enable}}
        <div class="card main_card">
            <img class="card-img-top renderervideo" src="{{thumbnail}}" alt="{{title}}" data-id="{{videoid}}" data-zatukurl="{{path}}" data-title="{{title}}" class="w-100" height="150px">
            <div class="card-block">
                <h6 class="card-title">{{{title}}}</h6>

                <div class="card-text">
                    <p class="te_mt upload">{{#str}}uploadedby,mod_zatuk{{/str}} <span class="zatuk_upload_by_clr"> {{usercreated}} {{#str}}on{{/str}},mod_zatuk {{timecreated}} </span></p>
                </div>
            </div>
        </div>
  	</div>
</div>
