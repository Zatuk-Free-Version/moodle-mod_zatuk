{{!
    @template mod_zatuk/video
    Example context (json):
    {
      "addcapability" : "true",
      "uploadvideo" : "1254",
      "content" : ""
    }
}}
<div>
    {{# addcapability}}
    
         <a tabindex="0" title="{{#str}}addvideo, mod_zatuk{{/str}}" class="btn btn-primary pull-right upload_btn" role="button" data-action="uploadvideo" data-id= 0 data-uploadvideoid={{uploadvideo}} >{{# str}}uploadvideo, mod_zatuk {{/ str}}</a>
        
    {{/ addcapability}}
    <ul class="nav nav-tabs md-pills pills-secondary">
        {{# content }}
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#panel11" role="tab">{{# str}}uploadedvideos, mod_zatuk {{/ str}}</a>
        </li>
        {{/ content }}
        <li class="nav-item">
            <a class="nav-link {{^ content }} active {{/ content }}" data-toggle="tab" href="#panel12" role="tab">{{# str}}totalvideos, mod_zatuk {{/ str}}</a>
        </li>
    </ul> 
    <div class="tab-content pt-0">
        {{# content }}
        <div class="tab-pane fade in show active" id="panel11" role="tabpanel">
          <br>
          {{{content}}}
        </div>
        {{/ content }}
        <div class="tab-pane fade {{^ content }} in show active {{/ content }}" id="panel12" role="tabpanel">
            <br>
              {{{zatuk}}}
        </div>
    </div>
</div>
{{#js}}
    require(['mod_zatuk/upload'], function(s) {
        s.init();
    });
{{/js}}
