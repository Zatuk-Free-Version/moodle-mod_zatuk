{{!
    @template mod_zatuk/filter
    Example context (json):
    {
        "all": "true",
        "inprogress": "true",
        "published": "5",
        "title": "title",
        "uploadeddate": ""
    }
}}
<div class="d-flex mb-2 align-items-center flex-wrap">
    <div class="dropdown mb-1">
        <div data-region="filter" class="d-flex align-items-center flex-wrap">
            <button id="statusfilterdropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" 
                    aria-expanded="false" >
                {{#pix}} i/filter {{/pix}}
                <span class="d-sm-inline-block" data-active-item-text>
                    {{#all}}{{#str}} allvideos, mod_zatuk {{/str}}{{/all}}
                    {{#inprogress}}{{#str}} inprogress, mod_zatuk {{/str}}{{/inprogress}}
                    {{#published}}{{#str}} published, mod_zatuk {{/str}}{{/published}}
                </span>
            </button>
            <ul class="dropdown-menu" role="menu" data-show-active-item data-skip-active-class="true" data-active-item-text aria-labelledby="statusfilter">
                <li>
                    <a class="dropdown-item" href="#" data-filter="statusfilter" data-value="all" data-pref="all"
                       aria-controls="zatuk-list-container" role="menuitem" {{#all}}aria-current="true"{{/all}}>
                        {{#str}} allvideos, mod_zatuk {{/str}}
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#" data-filter="statusfilter" data-value="inprogress" data-pref="inprogress"
                       aria-controls="zatuk-list-container" role="menuitem" {{#inprogress}}aria-current="true"{{/inprogress}}>
                        {{#str}} inprogress, mod_zatuk {{/str}}
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#" data-filter="statusfilter" data-value="published" data-pref="published"
                       aria-controls="zatuk-list-container" role="menuitem" {{#published}}aria-current="true"{{/published}}>
                        {{#str}} published, mod_zatuk {{/str}}
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="mb-1 ml-1 d-flex">
        <div data-region="filter"  class="dropdown">
            <button id="sortingdropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown"  aria-haspopup="true" aria-expanded="false" 
                    >
                {{#pix}} t/sort_by {{/pix}}
                <span class="d-sm-inline-block" data-active-item-text>
                    {{#title}}{{#str}} title, mod_zatuk {{/str}}{{/title}}
                    {{#uploadeddate}}{{#str}} uploadeddate, mod_zatuk {{/str}}{{/uploadeddate}}
                </span>
            </button>
            <ul class="dropdown-menu" role="menu" data-show-active-item data-skip-active-class="true" aria-labelledby="sortfilter">
                <li>
                    <a class="dropdown-item" href="#" data-filter="sortfilter" data-pref="title" data-value="fullname"
                        aria-controls="zatuk-list-container" role="menuitem" {{#title}}aria-current="true"{{/title}}>
                        {{#str}} title, mod_zatuk {{/str}}
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#" data-filter="sortfilter" data-pref="uploadeddate" data-value="uploadeddate"
                       aria-controls="zatuk-list-container" role="menuitem" {{#uploadeddate}}aria-current="true"{{/uploadeddate}}>
                        {{#str}} uploadeddate, mod_zatuk {{/str}}
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="ml-1 mb-1">
        <div data-region="query" class="d-flex align-items-center flex-wrap">
            <span data-fieldtype="text">
            <input type="text" class="form-control " name="query" id="id_query" data-filter="searchfilter" data-pref="searchfilter" data-value=""  value="" placeholder="Title search">
            </span>
            <span class="ml-1" data-fieldtype="submit">
                <input type="submit" class="btn btn-primary" name="search" id="id_search" value="Search">
            </span>
        </div>
    </div>
    {{# addcapability}}
        <div class="mb-2  ml-auto">
             <a tabindex="0" title="{{#str}}addvideo, mod_zatuk{{/str}}"  role="button" class="btn btn-primary mr-2" data-action="uploadvideo" data-id=0  >{{# str}}uploadvideo, mod_zatuk {{/ str}}</a>
        </div>
    {{/ addcapability}}
</div>
{{#js}}
    require(['mod_zatuk/upload'], function(s) {
        s.init();
    });
{{/js}}

