{{!
    @template mod_zatuk/list
    Example context (json):
    {
        "paging": "",
        "length": "5",
        "statusfilter": "",
        "sortfilter": "",
        "pagingbar": "true"
    }
}}
<div class="border-bottom pb-2">
    <div data-region="zatuk-list-container" data-paging="{{paging}}" data-length={{length}} data-videos-offset="0" data-statusfilter="{{statusfilter}}" data-sortfilter="{{sortfilter}}" data-searchquery="" >

    {{> mod_zatuk/filter}}
        <div data-region="zatuk-list-loading-placeholder">
            <ul class="pl-0 list-group list-group-flush">
          
            </ul>
            <div class="pt-3 d-flex justify-content-between">
                <div class="w-25 bg-pulse-grey" style="height: 35px"></div>
                <div class="w-25 bg-pulse-grey" style="height: 35px"></div>
            </div>
        </div>
        <div class="zatuk-list" data-region="zatuk-list-content">    
            {{> mod_zatuk/video_list_item }}
        </div>
        {{#pagingbar}}
            <div class="d-flex paging-bar-container mb-3" data-region="paging-bar-container">
                {{> core/paged_content_paging_bar }}
            </div>
        {{/pagingbar}}
    </div>
</div>

